<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fankux.dao.FileDao">

    <select id="selectDirItems" resultType="FileItem">
        SELECT
          type,
          path AS src,
          name AS fileName
        FROM file;
    </select>

    <insert id="insert" parameterType="FileItem" keyProperty="id" useGeneratedKeys="true">
      INSERT INTO file ('path', 'name', 'type')
      VALUES (#{src}, #{fileName}, #{type});
    </insert>

</mapper>